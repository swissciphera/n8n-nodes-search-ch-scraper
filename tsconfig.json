{
    "compilerOptions": {
      "lib": [
        "es2019",
        "es2020",
        "es2022",
        "dom"
      ],
      "module": "commonjs",
      "target": "es2019",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist/",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "useUnknownInCatchVariables": false
    },
    "include": [
      "credentials/**/*",
      "nodes/**/*",
      "nodes/**/*.json"
    ],
    "exclude": [
      "node_modules"
    ]
  }
